<div class="registration_form">
  <div>
    <h2 class="registration_title">Login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "registration_input" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: "registration_input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field registration_remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Login", class: "registration_button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
